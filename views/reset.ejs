<% include ./partials/header %>

<div class="background"></div>
<div class="row align-items-end">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h1 class="formHeader">Update Password</h1>
        <form action="/reset/<%= token %>" method="POST">
            <div class="form-group">
                <label for="password">New password</label>
                <input id="password" class="form-control" type="password" name="password" autofocus="autofocus">
                <span>Enter new password here</span>
            </div>
            <div class="form-group">
                <label for="confirm">Confirm password</label>
                <input class="form-control" type="password" name="confirm" value="">
                <span>Confirm new password</span>
            </div>
            <button class="btn btn-lg btn-dark btn-block submitButton">Update password</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

<% include ./partials/footer %>