<% include ./partials/header %>

<div class="row">
    <div class="centeredDiv">
        <h1 class="display-3">REGISTER</h1>
        <form action="/register" method="POST">
        <div class="form-group">
            <label for="username">Username</label>
                <input id="username" class="form-control" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group">
            <label for="email">Email</label>
                <input id="email" class="form-control" type="email" name="email" placeholder="email">
            </div>
            <div class="form-group">
            <label for="password">Password</label>
                <input id="password" class="form-control" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group">
            <label for="admincode">Admin Code</label>
                <input id="admincode" class="form-control" type="text" name="adminCode" placeholder="admin code">
            </div>
            <button class="btn btn-lg btn-success btn-block correctAlignment">Register</button>
        </form>
        <p class="text-center">Already a user? <a href="/login">Login to continue</a></p>

    </div>
</div>

<% include ./partials/footer %>