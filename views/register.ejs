<% include ./partials/header %>

<div class="background"></div>
<div class="row align-items-end">
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <h1 class="formHeader">Register</h1>
        <form action="/register" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" class="form-control" type="text" name="username">
                <span>Enter a username here</span>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" class="form-control" type="email" name="email">
                <span>Enter a email adress here</span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" class="form-control" type="password" name="password">
                <span>Enter a password here</span>
            </div>
            <div class="form-group">
                <label for="admincode">Admin Code</label>
                <input id="admincode" class="form-control" type="text" name="adminCode">
                <span>If you're an admin, enter secret code</span>
            </div>
            <button class="btn btn-lg btn-dark btn-block submitButton">Register</button>
        </form>
        <p class="userQuestion">Already a user? <a href="/login">Login to continue</a></p>
    </div>
    <div class="col-md-4"></div>
</div>

<% include ./partials/footer %>