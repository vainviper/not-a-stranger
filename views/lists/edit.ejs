<% include ../partials/header %>

<div class="row">
    <div class="col-md-12">
        <h1 class="formHeader">Edit <%= list.name %></h1>
    </div>
</div>
<div class="row"> 
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="centeredStrangerDiv">
            <form action="/lists/<%= list._id %>/?_method=PUT" method="POST">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="list[name]" value="<%= list.name %>">
                    <span>Edit name of collection</span>
                    <label for="currentAge">Current Age</label>
                    <input class="form-control" type="number" name="list[currentAge]" value="<%= list.currentAge %>">
                    <span>Edit the current year of the collection here</span>
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="list[description]" value="<%= list.description %>">
                    <span>Edit description of the collection here</span>
                    <button class="btn btn-lg btn-dark btn-block submitButton">Edit Collection</button>
            </form>
        </div>
        <a class="btn btn-sm btn-dark backButton" href="/lists">Back</a>
    </div>
    <div class="col-md-4"></div>
</div>

<% include ../partials/footer %>