<div class="background"></div>
<div class="row">
    <div class="centeredDiv">

        <h1 class="display-3">Login</h1>
        <form action="/login" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" class="form-control" type="text" name="username">
                <span>Enter your username here</span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" class="form-control" type="password" name="password">
                <span>Enter your password here</span>
            </div>
            <button class="btn btn-lg btn-dark btn-block correctAlignment">Login</button>
        </form>
        <p class="userQuestion">New user? <a href="/register">Register to continue</a></p>
    </div>
</div>

